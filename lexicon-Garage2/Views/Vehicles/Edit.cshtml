@model lexicon_Garage2.Models.Vehicle

@{
    ViewData["Title"] = "Update Vehicle";
}

<h1 class="text-center mb-4 text-dark fw-bold">Update Vehicle</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0" style="background-color: #FEFEFA">
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="VehicleType" class="form-label text-dark fw-bold"></label>
                        <input asp-for="VehicleType" class="form-control border-dark text-dark" />
                        <span asp-validation-for="VehicleType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegistrationNumber" class="form-label text-dark fw-bold"></label>
                        <input asp-for="RegistrationNumber" class="form-control border-dark text-dark" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Color" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Color" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Brand" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Brand" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Model" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Model" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NumberOfWheels" class="form-label text-dark fw-bold"></label>
                        <input asp-for="NumberOfWheels" class="form-control border-dark text-dark" />
                        <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mb-4 mt-3">
                        <input type="submit" value="Update Vehicle" class="btn btn-dark px-5" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Garage">Back to Garage</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
