@using lexicon_Garage2.Models.ViewModels
@model VehicleViewModel 

@{
    ViewData["Title"] = "Park";
}

<h1 class="text-center mb-4 text-dark fw-bold">Park A Vehicle</h1>

<div class="d-flex justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0" style="background-color: #FEFEFA">
            <div class="card-body p-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

                    @* Dropdown list for vehicle type *@
                    <div class="form-group mb-3">
                        <label asp-for="VehicleTypeId" class="form-label text-dark fw-bold"></label>
                        <select asp-for="VehicleTypeId" class="form-control border-dark text-dark">
                            <option value="" disabled selected>Select Type</option>
                            @foreach (var vehicleType in (List<VehicleType>)ViewData["VehicleTypes"])
                            {
                                <option value="@vehicleType.Id">@vehicleType.TypeName @vehicleType.Size</option>
                            }
                        </select>
                        <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="RegistrationNumber" class="form-label text-dark fw-bold"></label>
                        <input asp-for="RegistrationNumber" class="form-control border-dark text-dark" />
                        <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Color" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Color" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Brand" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Brand" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Model" class="form-label text-dark fw-bold"></label>
                        <input asp-for="Model" class="form-control border-dark text-dark" />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="NumberOfWheels" class="form-label text-dark fw-bold"></label>
                        <input asp-for="NumberOfWheels" class="form-control border-dark text-dark" />
                        <span asp-validation-for="NumberOfWheels" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center mb-4 mt-3">
                        <input type="submit" value="Park" class="btn btn-dark px-5" />
                        <a asp-action="Garage" class="btn btn-secondary px-4">Back to Garage</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
