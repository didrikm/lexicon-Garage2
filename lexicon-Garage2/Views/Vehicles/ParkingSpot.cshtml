@model IEnumerable<ParkingSpotViewModel>


@{
    var parkingSpot = Model.FirstOrDefault();
    var currentMaxCapacity = parkingSpot?.MaxCapacity ?? 10; // Hämta nuvarande maxkapacitet
}

<h2>Parking Spot Settings</h2>

@* Formulär för att uppdatera MaxCapacity *@
<form asp-action="UpdateMaxCapacity" method="post">
    <div>
        <label for="newCapacity">Change Capacity:</label>
        <input type="number" id="newCapacity" name="newCapacity" min="1" value="@currentMaxCapacity" required />
        <button type="submit">Update</button>
    </div>
</form>

<div class="row">
    @foreach (var spot in Model) // Change ViewBag to Model
    {
        <div class="col-2 mb-2">
            <div class="p-2 border text-center @(spot.IsOccupied ? "bg-danger text-white" : "bg-success text-white")">
                @if (spot.IsOccupied)
                {
                    <strong>@spot.RegistrationNumber</strong> <!-- Show Registration Number if occupied -->
                }
                else
                {
                    <strong>Spot @spot.SpotNumber</strong> <!-- Show spot number if available -->
                }
                <br />
                @(spot.IsOccupied ? "Occupied" : "Available")
            </div>
        </div>
    }
</div>
